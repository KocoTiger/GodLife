<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration
 		 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 		"http://mybatis.org/dtd/mybatis-3-config.dtd">
  						
<!--	mybatis-config.xml :: MyBatis Framework  MetaData -->
<configuration>

	<!-- 기타 설정정보 :: [MyBatis_Home]/mybatis-3.2.1.pdf 참조 -->
	<settings>
		<setting name="callSettersOnNulls" value="false"/>
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>	
	
	<!-- FQCN(Full Qualified Class Name) Alias(별칭관리) -->
	<typeAliases>
		<typeAlias alias="user" type="com.godLife.io.service.domain.User" />
		<typeAlias alias="friendBlack" type="com.godLife.io.service.domain.FriendBlack" />
		<typeAlias alias="msg" type="com.godLife.io.service.domain.Msg" />
		<typeAlias alias="search" type="com.godLife.io.common.Search" />
		<typeAlias alias="challenge" type="com.godLife.io.service.domain.Challenge" />
	</typeAliases>
	
	 <!-- SQL Definition :: file include -->
	<mappers>
		<mapper resource="sql/UserMapper.xml"/>
		<mapper resource="sql/FriendBlackMapper.xml"/>
		<mapper resource="sql/MsgMapper.xml"/>
		<mapper resource="sql/ChallengeMapper.xml"/>
	</mappers>

</configuration>